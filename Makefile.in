include @top_srcdir@/Makefile.common

DIST=@PACKAGE@-@VERSION@
DISTDIR=@top_srcdir@/$(DIST)
ARCHIVE=$(DIST).tar
TARBALL=$(ARCHIVE).bz2

SUBDIRS=src

DISTFILES=configure Makefile.in config.h.in $(SUBDIRS)


.PHONY: clean
.PHONY: distclean
.PHONY: $(SUBDIRS)
.PHONY: $(ARCHIVE)


all: $(SUBDIRS)

$(SUBDIRS):
	cd $@ && $(MAKE)

clean:
	for d in $(SUBDIRS); do (cd $$d && $(MAKE) clean); done

distclean: clean
	-rm -f $(ACFILES)
	-rm -f $(TARBALL)

dist: clean $(TARBALL) $(DISTDIR)

$(DISTDIR):
	mkdir $(DISTDIR)
	cp -dpr $(DISTFILES) $(DISTDIR)

$(TARBALL): $(ARCHIVE)
	-rm -f $@
	$(BZIP2) $<

$(ARCHIVE): $(DISTDIR)
	$(TAR) cvf $@ $(DISTDIR)
	rm -rf $(DISTDIR)

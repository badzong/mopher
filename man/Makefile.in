# Makefile, man


# OUT_[A-Z]:
#	built on `all'
#	removed on `clean'
#
OUT_A+=			mopher.7
OUT_A+=			mopherctl.8
OUT_A+=			mopherd.8
OUT_A+=			mopherd.acl.5
OUT_A+=			mopherd.conf.5

# INST:
#	installed on `install'
#	uninstalled on `uninstall'
#
INST=			$(OUT_A:=.man)


include @top_srcdir@/make/mk.common


.SUFFIXES:
.SUFFIXES:		.in
.in:
	@SED@ " \
		s,@PROGRAM_PATH[@],$(PROGRAM_PATH),g; \
		s,@MODULE_PATH[@],$(MODULE_PATH),g; \
		s,@CONFIG_PATH[@],$(CONFIG_PATH),g;" $< >$@

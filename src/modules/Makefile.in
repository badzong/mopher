# Makefile, modules


# OUT_[A-Z]:
#	built on `all'
#	removed on `clean'
#
OUT_A+=			base.so
OUT_A+=			clamav.so
OUT_A+=			counter.so
OUT_A+=			dblog.so
OUT_A+=			dnsbl.so
OUT_A+=			hitlist.so
OUT_A+=			memdb.so
OUT_A+=			p0f.so
OUT_A+=			random.so
OUT_A+=			spamd.so
OUT_A+=			string.so
OUT_A+=			@MOD_SPF@
OUT_A+=			@MOD_DB_BDB@
OUT_A+=			@MOD_DB_MYSQL@
OUT_A+=			@MOD_DB_PGSQL@
OUT_A+=			@MOD_DB_SQLITE3@
OUT_A+=			@MOD_GEOIP@

# INST:
#	installed on `install'
#	uninstalled on `uninstall'
#
INST=			$(OUT_A:=.lib)

# *FLAGS
#
CFLAGS+=		-I@top_srcdir@
CFLAGS+=		-I@top_srcdir@/src/include
CFLAGS.bdb.so+=		@BDB_DB185_H@
LDFLAGS+=		-nostartfiles
LDFLAGS+=		-shared
LDFLAGS+=		-fPIC
LDFLAGS.bdb.so+=	@BDB_LIBS@
LDFLAGS.sakila.so+=	-lmysqlclient
LDFLAGS.pgsql.so+=	-lpq
LDFLAGS.lite.so+=	-lsqlite3
LDFLAGS.spf.so+=	-lspf2
LDFLAGS.geoip.so+=	-lGeoIP


include @top_srcdir@/make/mk.common


.SUFFIXES:
.SUFFIXES:		.c .so
.c.so:
	@CC@ $(CFLAGS) $(CFLAGS.$@) $< $(LDFLAGS) $(LDFLAGS.$@) -o $@

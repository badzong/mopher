include @top_srcdir@/Makefile.common

INCLUDE=-I@top_srcdir@ -I@top_srcdir@/src/include
CFLAGS+=$(INCLUDE)

OBJECTS=cast.o string.o list.o spamd.o rbl.o seen.o regex.o memdb.o @MOD_ACL_SPF@ @MOD_DB_BDB@ @MOD_DB_MYSQL@
MODULES=cast.so string.so list.so spamd.so rbl.so seen.so regex.so memdb.so @MOD_ACL_SPF@ @MOD_DB_BDB@ @MOD_DB_MYSQL@
MOD_ALL=@MOD_ALL@

.PHONY: clean

all: $(MOD_ALL)

bdb.so: bdb.c Makefile
	$(CC) $(CFLAGS) $(SOFLAGS) $(LDFLAGS) -ldb -o $@ $<

sakila.so: sakila.c Makefile
	$(CC) $(CFLAGS) $(SOFLAGS) $(LDFLAGS) -lmysqlclient -o $@ $<

spf.so: spf.c
	$(CC) $(CFLAGS) $(SOFLAGS) $(LDFLAGS) -lspf2 -o $@ $<

lib.a: $(OBJECTS)
	$(AR) $(ARFLAGS) $@ $^

clean:
	-rm $(MOD_ALL)

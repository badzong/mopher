include @top_srcdir@/Makefile.common

INCLUDE=-I@top_srcdir@ -I@top_srcdir@/src/include
CFLAGS+=$(INCLUDE)

OBJECTS=cast.o string.o spamd.o rbl.o delivered.o @MOD_ACL_SPF@ @MOD_DB_BDB@ @MOD_DB_MYSQL@
MODULES=cast.so string.so spamd.so rbl.so delivered.so @MOD_ACL_SPF@ @MOD_DB_BDB@ @MOD_DB_MYSQL@
MOD_ALL=@MOD_ALL@

all: $(MOD_ALL)

bdb.so: bdb.c Makefile
	$(CC) $(CFLAGS) $(SOFLAGS) -ldb -o $@ $<

sakila.so: sakila.c Makefile
	$(CC) $(CFLAGS) $(SOFLAGS) -lmysqlclient -o $@ $<

spf.so: spf.c
	$(CC) $(CFLAGS) $(SOFLAGS) -lspf2 -o $@ $<

lib.a: $(OBJECTS)
	$(AR) $(ARFLAGS) $@ $^

clean:
	-rm lib.a $(OBJECTS) $(MODULES)

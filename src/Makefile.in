# Makefile, src


# OUT_[A-Z]:
#	built on `all'
#	removed on `clean'
#
OUT_A+=			acl_lex.c
OUT_A+=			acl_yacc.c
OUT_A+=			cf_lex.c
OUT_A+=			cf_yacc.c

OUT_B+=			acl_yacc.h
OUT_B+=			cf_yacc.h

OUT_C+=			acl.o
OUT_C+=			acl_lex.o
OUT_C+=			acl_yacc.o
OUT_C+=			cf.o
OUT_C+=			cf_defaults.o
OUT_C+=			cf_lex.o
OUT_C+=			cf_yacc.o
OUT_C+=			client.o
OUT_C+=			dbt.o
OUT_C+=			defs.o
OUT_C+=			exp.o
OUT_C+=			greylist.o
OUT_C+=			hash.o
OUT_C+=			ht.o
OUT_C+=			ll.o
OUT_C+=			log.o
OUT_C+=			milter.o
OUT_C+=			module.o
OUT_C+=			msgmod.o
OUT_C+=			parser.o
OUT_C+=			pipe.o
OUT_C+=			regdom.o
OUT_C+=			server.o
OUT_C+=			sht.o
OUT_C+=			sock.o
OUT_C+=			tarpit.o
OUT_C+=			test.o
OUT_C+=			util.o
OUT_C+=			var.o
OUT_C+=			vlist.o
OUT_C+=			vp.o
OUT_C+=			vtable.o
OUT_C+=			sql.o

OUT_D+=			mopherctl
OUT_D+=			mopherd

# INST:
#	installed on `install'
#	uninstalled on `uninstall'
#
INST=			$(OUT_D:=.sbin)

# *FLAGS
#
YFLAGS.cf_yacc.c+=	-pcf_
YFLAGS.acl_yacc.c+=	-pacl_
LFLAGS.cf_lex.c+=	-Pcf_
LFLAGS.acl_lex.c+=	-Pacl_
CFLAGS+=		-I@top_srcdir@
CFLAGS+=		-I@top_srcdir@/src/include
CFLAGS.defs.o+=		-DMODULE_PATH=\"$(MODULE_PATH)\"
CFLAGS.defs.o+=		-DMOPHERD_CONF=\"$(MOPHERD_CONF)\"
CFLAGS.defs.o+=		-DMOPHERD_ACL=\"$(MOPHERD_ACL)\"
CFLAGS.defs.o+=		-DREGDOM_RULES=\"$(REGDOM_RULES)\"
LDFLAGS+=		-rdynamic
LDFLAGS+=		@LIBS@
LDFLAGS+=		@MOD_LIBS@


include @top_srcdir@/make/mk.common


$(OUT_B): $(OUT_A)
$(OUT_C): $(OUT_A) $(OUT_B)
$(OUT_D): $(OUT_C)
	@CC@ $(CFLAGS) -o $@ $@.c $> $^ $(LDFLAGS)

.SUFFIXES:
.SUFFIXES:		.conf .y .l .h .c .o
.y.h:			# unset
.y.o:			# unset
.l.h:			# unset
.l.o:			# unset
.y.c:
	@YACC@ -d $(YFLAGS) $(YFLAGS.$@) -o $@ $<
.l.c:
	@LEX@ -t $(LFLAGS) $(LFLAGS.$@) $< >$@
.c.o:
	@CC@ -c $(CFLAGS) $(CFLAGS.$@) $< -o $@
.conf.o:
	@LD@ -r -b binary -o $@ $> $^
	@OBJCOPY@ --rename-section \
		.data=.rodata,alloc,load,readonly,data,contents $@ $@

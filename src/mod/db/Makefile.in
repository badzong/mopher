INCLUDE=-I@top_srcdir@ -I@top_srcdir@/src/include
CFLAGS=-Wall -g -shared -nostartfiles -fPIC $(INCLUDE)
OBJECTS=@MOD_DB_BDB@ @MOD_DB_MYSQL@
ACFILES=Makefile

all: $(OBJECTS)

bdb.so: bdb.c Makefile
	$(CC) $(CFLAGS) -ldb -o $@ $<

my.so: my.c Makefile
	$(CC) $(CFLAGS) -lmysqlclient -o $@ $<

clean:
	-rm $(OBJECTS)

distclean:
	-rm -f $(ACFILES)


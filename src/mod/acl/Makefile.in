CC=gcc
CFLAGS=-Wall -g -shared -nostartfiles -fPIC -I../../include
OBJECTS=milter.so string.so spf.so spamd.so rbl.so
ACFILES=Makefile

all: $(OBJECTS)

spf.so: spf.c
	$(CC) $(CFLAGS) -lspf2 -o $@ $<

%.so: %.c Makefile
	$(CC) $(CFLAGS) -o $@ $<

clean:
	-rm $(OBJECTS)

distclean:
	-rm -f $(ACFILES)


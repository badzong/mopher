# Install paths
prefix=@prefix@
exec_prefix=@exec_prefix@
sbindir=@sbindir@
localstatedir=@localstatedir@
sysconfdir=@sysconfdir@

# Program paths

CC=@CC@
LEX=@LEX@
YACC=@YACC@
OBJCOPY=@OBJCOPY@
AR=@AR@
TAR=@TAR@
BZIP2=@BZIP2@
INSTALL=@INSTALL@


# Flags

YFLAGS=-d
CFLAGS=-Wall -g @CFLAGS@
SOFLAGS=-shared -nostartfiles -fPIC
LDFLAGS=-rdynamic @LIBS@ @MOD_LIBS@
ARFLAGS=rcs


# Paths (defs.c)
MOPHERD_DIR=@localstatedir@/lib/mopher
MOPHERD_CONF=@sysconfdir@/mopher/mopherd.conf
MAIL_ACL=@sysconfdir@/mopher/mail.acl

# Files

ACFILES=config.h Makefile Makefile.common src/Makefile src/modules/Makefile


# Targets

.SUFFIXES: .c .o .so

.c.so:
	$(CC) $(CFLAGS) $(SOFLAGS) -o $@ $<

.c.o:
	$(CC) $(CFLAGS) -c $<

# Install paths
#
prefix=			@prefix@
exec_prefix=		@exec_prefix@
sbindir=		@sbindir@
libdir=			@libdir@
sysconfdir=		@sysconfdir@

# Program paths
#
CC=			@CC@
LEX=			@LEX@
YACC=			@YACC@
OBJCOPY=		@OBJCOPY@
AR=			@AR@
TAR=			@TAR@
GZIP=			@GZIP@
INSTALL=		@INSTALL@
INSTALL_PROG=		$(INSTALL)
INSTALL_DATA=		$(INSTALL) -m 644
INSTALL_DIR=		$(INSTALL) -d

# Flags
#
YFLAGS=			-d
CFLAGS=			-Wall @CFLAGS@
LDFLAGS=		-rdynamic @LDFLAGS@ @LIBS@ @MOD_LIBS@
ARFLAGS=		rcs

# BerkeleyDB Module (bdb.so)
#
BDB_LIBS=		@BDB_LIBS@
BDB_DB185_H=		@BDB_DB185_H@

# Paths (defs.c)
#
PROGRAM_PATH=		@sbindir@
MODULE_PATH=		@libdir@/mopher
CONFIG_PATH=		@sysconfdir@/mopher
CONFIG_INST?=		$(CONFIG_PATH)
MAN_PATH=		@datarootdir@/man

MOPHERD_CONF=		$(CONFIG_PATH)/mopherd.conf
MOPHERD_ACL=		$(CONFIG_PATH)/mopherd.acl
REGDOM_RULES=		$(CONFIG_PATH)/effective_tld_names.dat

# Files
#
PROG=			mopherd mopherctl
CONF=			mopherd.acl.example mopherd.conf.example \
			effective_tld_names.dat
MAN=			mopher.7 mopherctl.8 mopherd.8 mopherd.acl.5 \
			mopherd.conf.5
